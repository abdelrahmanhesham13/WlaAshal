<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Yellow_Rating_bar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="colorControlActivated">#f89e1b</item>
        <item name="android:alpha">20</item>
    </style>

    <style name="yellow" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">#f89e1b</item>
        <item name="android:alpha">20</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="fab_colorRipple">@color/colorPrimaryDark</item>
    </style>


    <style name="MenuButtonsStyleButton">
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="fab_colorRipple">@color/colorPrimaryDark</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="weekPrice">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
