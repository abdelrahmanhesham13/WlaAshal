<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:background="@drawable/rounded_bg_for_edit_text"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/question_mark"
            android:layout_height="350dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                fontPath="fonts/ArbFONTS-Droid-Arabic-Kufi-Bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تقيمك"
                android:textColor="@android:color/black"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:layout_marginTop="5dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/product_text"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="ماتقييمك لهذا العميل؟"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:visibility="visible" />


            <RatingBar
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="1"
                android:progressBackgroundTint="#cccccc"
                android:id="@+id/rating_bar_2"
                android:theme="@style/yellow"
                android:layout_height="wrap_content" />


            <TextView
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:text="اترك تعليقك"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp"
                android:visibility="visible" />


            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_bg_for_edit_text"
                android:inputType="textAutoComplete"
                android:padding="10dp"
                android:textSize="12sp"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_rate"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_btn_bg"
                android:baselineAligned="false"
                android:drawableEnd="@drawable/ic_send"
                android:text="تقييم"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>