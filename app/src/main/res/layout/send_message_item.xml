<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layoutDirection="rtl"
    android:layout_gravity="right"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/shape_bg_outgoing_bubble"
    android:layout_height="wrap_content"
    tools:ignore="UnusedAttribute">


    <TextView
        android:layout_gravity="right"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="10dp"
        android:layout_marginRight="20dp"
        android:textSize="11sp"
        tools:ignore="HardcodedText,RtlHardcoded,MissingPrefix"
        fontPath="fonts/ArbFONTS-DroidArabicKufi.ttf"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="السلام عليكم ورحمة الله وبركاته اهلا وسهلا"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/message"
        android:text="15/9/1996"
        android:id="@+id/date"
        android:textSize="11sp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

</RelativeLayout>